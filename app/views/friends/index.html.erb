<h1>Friends</h1>

<table class="table table-striped table-hover">
  <thead class="table-dark">
    <tr>
      <th>Full name</th>
      <th>Email</th>
      <th>Phone</th>
      <th class="text-end">Manage</th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
      <% if friend.user == current_user %>
        <tr>
          <td><%= link_to friend.first_name + " " + friend.last_name, friend %></td>
          <td><%= friend.email %></td>
          <td><%= friend.phone %></td>  
          <td class="text-end"><%= link_to 'Delete', friend, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger btn-sm" %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Friend', new_friend_path, class:"btn btn-primary" %>
