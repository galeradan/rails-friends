<div class="card">
  <div class="card-body">
    <h5 class="card-title">
      <%= @friend.first_name + " " + @friend.last_name %>
    </h5>
    <h6 class="card-subtitle mb-2 text-muted"><%= @friend.email %></h6>
    <p class="card-text"><%= @friend.phone %></p>
  </div>
  <div class="card-footer">
    <%= link_to 'Edit', edit_friend_path(@friend), class:"btn btn-primary" %>
    <%= link_to 'Back', friends_path, class:"btn btn-secondary" %>
  </div>
</div>


